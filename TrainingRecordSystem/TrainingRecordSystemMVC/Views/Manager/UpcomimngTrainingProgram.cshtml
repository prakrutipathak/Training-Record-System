        .table td {
            padding: 10px; /* Add padding if needed for content */
            text-align: center;
        }

    .custom-thead {
        background-color: #00b4c1;
    }

    .form-label {
        font-weight: bold;
        margin-bottom: 0.5rem;
    }

    .form-select {
        width: 100%;
        padding: 0.375rem 1.75rem 0.375rem 0.75rem;
