@if (!User.Identity.IsAuthenticated)
{
    <ul class="nav navbar-nav ml-auto">
        <li class="nav-item">
            <a class="nav-link text-light" asp-action="Login" asp-controller="Auth"><i class="fa-solid fa-arrow-right-to-bracket"></i> SIGN IN</a>
        </li>
    </ul>
}
else
{
    <ul class="nav navbar-nav ml-auto">

        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle text-light" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <i class="fa-solid fa-user"></i> @User.Identity.Name
            </a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                <a class="dropdown-item text-dark" asp-action="LogOut" asp-controller="Auth"><i class="fa-solid fa-right-from-bracket"></i> Sign Out</a>
                @{
                    var userName = @User.Identity.Name;
                }
                <a class="dropdown-item text-dark" asp-action="ChangePassword" asp-controller="Auth"><i class="fa-solid fa-pen-nib"></i> Change Password</a>
            </div>
        </li>

    </ul>
}
