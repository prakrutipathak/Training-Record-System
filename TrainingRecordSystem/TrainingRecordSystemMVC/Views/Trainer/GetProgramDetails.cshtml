@using TrainingRecordSystemMVC.ViewModels
@model TrainingProgramDetailsViewModel


    <div class="container">
        <div class="row">
            <div class="col-md-6 mx-auto">
                <div class="card shadow-sm mb-4 mt-5">
                    <div class="card-body">
                        <h2 class="card-title mb-2"><i class="fas fa-info-circle"></i> Training Topic Details</h2>
                    <p class="card-text mb-2"><i class="fas fa-calendar-alt"></i> Start Date: @Model.StartDate.ToString("dd/MM/yyyy")</p>
                    <p class="card-text mb-2"><i class="fas fa-calendar-alt"></i> End Date: @Model.EndDate.ToString("dd/MM/yyyy")</p>
                        <div class="final-price mb-2"><i class="fas fa-clock"></i> Time: @Model.StartTime.ToShortTimeString() to @Model.EndTime.ToShortTimeString()</div>
                        <div class="price mb-2"><i class="fas fa-chalkboard-teacher"></i> Mode: @Model.ModePreference</div>
                        <div class="final-price mb-2"><i class="fas fa-hourglass-half"></i> Duration: @Model.Duration hrs/day</div>
                        <div class="final-price mb-2"><i class="fas fa-users"></i> Target Audience: @Model.TargetAudience</div>

