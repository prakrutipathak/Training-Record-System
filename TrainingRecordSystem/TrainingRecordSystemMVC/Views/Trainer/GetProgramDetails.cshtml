                    <div class="d-flex justify-content-between mt-3">
                        <a type="button" class="btn btn-outline-danger me-2" asp-action="Index"><i class="fas fa-arrow-left"></i></a>
                        <a type="button" value="Submit" class="btn btn-primary btn-block" style="background-color:#00b4c1" asp-action="UpdateProgramDetails" asp-route-topicid="@Model.TrainerTopic.TopicId" id="updateLink">Update Details</a>
                    </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

